<Page x:Class="OrderManagementSystem.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная страница">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Добро пожаловать в систему управления заказами"
                   FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20" />
        <Button Content="Статус заказов" Click="GoToOrderStatus" Width="200" Margin="0,5" />
        <Button Content="Управление доставкой" Click="GoToDeliveryManagement" Width="200" Margin="0,5" />
        <Button Content="Возвраты" Click="GoToReturns" Width="200" Margin="0,5" />
    </StackPanel>
</Page>
